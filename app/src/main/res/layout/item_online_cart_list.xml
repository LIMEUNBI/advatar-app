<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground">
    
    <RelativeLayout
        android:id="@+id/cart_type_holder"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/cart_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="장바구니"
            android:textColor="@color/black"
            android:textSize="12dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line_cart_type_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cart_type_holder"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:visibility="visible"
            android:background="@color/text_bfbfbf"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_holder"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_below="@+id/cart_type_holder"
        android:layout_gravity="center_vertical"
        android:paddingLeft="16dp">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:scaleType="centerInside" />

        <RelativeLayout
            android:id="@+id/usedPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_product">

            <RelativeLayout
                android:id="@+id/left_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/deal_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:maxWidth="170dp"
                    android:text="상품명"
                    android:textColor="@color/text_484848"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/option_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/deal_name"
                    android:layout_marginTop="4dp"
                    android:maxWidth="170dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="옵션명"
                    android:textColor="@color/text_acacac"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/select_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/option_name"
                    android:layout_marginTop="4dp"
                    android:text="갯수 : "
                    android:textColor="@color/text_acacac"
                    android:textSize="12dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/right_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:text="0원"
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/delivery_policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/amount"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="무료배송"
                    android:textColor="@color/text_acacac"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/avg_delivery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/delivery_policy"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="4dp"
                    android:text="평균 배송일 : "
                    android:textColor="@color/text_acacac"
                    android:textSize="12dp" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_holder">

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:visibility="visible"
            android:layout_marginLeft="102dp"
            android:layout_marginRight="16dp"
            android:background="@color/text_bfbfbf"/>

    </RelativeLayout>

</RelativeLayout>