<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/swipe_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/calendar_holder"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentTop="true">

            <FrameLayout
                android:id="@+id/btn_previous"
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/text_holder"
                android:layout_marginRight="10dp"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/image_previous"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerInside"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_keyboard_arrow_left_black_48dp" />

            </FrameLayout>

            <RelativeLayout
                android:id="@+id/text_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/text_month_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:text=""
                    android:textColor="@color/text_5d5d5d"
                    android:textSize="14dp"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <FrameLayout
                android:id="@+id/btn_next"
                android:layout_width="60dp"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/text_holder"
                android:layout_marginLeft="10dp"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/image_next"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerInside"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_keyboard_arrow_right_black_48dp" />

            </FrameLayout>

        </RelativeLayout>

        <com.epopcon.advatar.custom.listview.StickyListHeadersListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:clipToPadding="false"
            android:dividerHeight="0dp"
            android:divider="@color/white"
            android:background="@color/white"
            android:fastScrollEnabled="false"
            android:nestedScrollingEnabled="true"/>

        <RelativeLayout
            android:id="@+id/no_data_layout"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/white"
            android:layout_below="@+id/header_linear"
            android:gravity="center"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/amount_layout"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/amount_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/blue_002080"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/amount_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/amount"
                        android:layout_toEndOf="@+id/amount"
                        android:layout_toRightOf="@+id/amount"
                        android:layout_marginBottom="5dp"
                        android:text=" 원"
                        android:textColor="@color/blue_99c2ff"
                        android:textSize="12dp" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:id="@+id/line"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/amount_layout"
                android:background="@color/line_f2f2f2"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_below="@+id/line"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/parcel_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:gravity="center"
                    android:text="쇼핑몰을 연동하세요."
                    android:textColor="@color/black"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/btn_online_login"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="144dp"
                    android:layout_height="40dp"
                    android:layout_below="@+id/parcel_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="24dp"
                    android:background="@drawable/button_shape_little"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="+   쇼핑몰 연동"
                    android:textColor="@color/white" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/no_data_monthly_layout"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/white"
            android:layout_below="@+id/header_linear"
            android:gravity="center"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/amount_layout1"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/amount_holder1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/amount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/blue_002080"
                        android:textSize="24dp" />

                    <TextView
                        android:id="@+id/amount_text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/amount1"
                        android:layout_toEndOf="@+id/amount1"
                        android:layout_toRightOf="@+id/amount1"
                        android:layout_marginBottom="5dp"
                        android:text=" 원"
                        android:textColor="@color/blue_99c2ff"
                        android:textSize="12dp" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/sync_image1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="13dp"
                    android:layout_toEndOf="@+id/amount_holder1"
                    android:layout_toRightOf="@+id/amount_holder1"
                    android:padding="10dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_refresh_grey"
                    android:visibility="visible" />

            </RelativeLayout>

            <View
                android:id="@+id/line1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/amount_layout1"
                android:background="@color/line_f2f2f2"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/line1"
                android:gravity="center"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/online_monthly_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="쇼핑 내역이 없습니다."
                    android:textColor="@color/black"
                    android:textSize="14dp" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>