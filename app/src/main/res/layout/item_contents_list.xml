<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/img_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/img_ads"
            android:layout_width="40dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_shape_little"
            android:src="@drawable/icon_ads" />

        <TextView
            android:id="@+id/brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_contents"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:text="브랜드"
            android:textSize="10dp"
            android:textColor="@color/blue_002080"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/img_contents" >

            <TextView
                android:id="@+id/contents_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아모레"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/contents_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contents_title"
                android:layout_marginTop="4dp"
                android:text="아모레"
                android:textColor="@color/text_484848"
                android:textSize="12dp"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layout"
        android:background="@color/blue_002080"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

</RelativeLayout>