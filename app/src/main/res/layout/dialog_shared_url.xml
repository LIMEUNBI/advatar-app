<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="상품 Pick!"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/edit_shared_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_rounded_corner"
        android:padding="10dp"
        android:hint="상품 URL을 입력해주세요."
        android:textSize="10dp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txt_shared_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_rounded_corner"
        android:padding="10dp"
        android:textSize="10dp"
        android:textColor="@color/black"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <CheckBox
            android:id="@+id/check_con1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="추적 주기 1시간"
            android:textSize="10dp" />

        <CheckBox
            android:id="@+id/check_con2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="추적 주기 3시간"
            android:textSize="10dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="30dp"
        android:background="#c3c3c3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="0">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="취소"
            android:textColor="#acacac"
            android:textSize="14dp"
            android:visibility="visible"/>

        <TextView
            android:layout_width="1.7px"
            android:layout_height="match_parent"
            android:background="#c3c3c3" />

        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="확인"
            android:textColor="@color/blue_002080"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>